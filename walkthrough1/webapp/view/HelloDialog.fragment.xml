      id="helloDialog"
      title="{i18n>showSaludinesText} {/recipient/name}">
      <content>
         <core:Icon
            src="sap-icon://activate"
            size="8rem"
            class="sapUiMediumMargin"/>
      </content>
   <beginButton>
         <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>